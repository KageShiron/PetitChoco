<Window x:Class="PetitChoco.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetitChoco"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="529.145" Width="860.028">
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>
    <Grid>
        <TabControl TabStripPlacement="Left">
            <TabItem Header="新規パッケージ" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="label" Content="パッケージID" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="17,15,0,0"/>
                    <TextBox x:Name="textBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="77.667,18,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                    <Label x:Name="label1" Content="テンプレート" HorizontalAlignment="Left" Margin="124,10.333,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                    <Label x:Name="label2" Content="保存場所" HorizontalAlignment="Left" Margin="82,30,0,0" Grid.Row="2" VerticalAlignment="Top"/>
                    <Label x:Name="label3" Content="Label" HorizontalAlignment="Left" Margin="82,17.333,0,0" Grid.Row="3" VerticalAlignment="Top"/>
                    <Button x:Name="button" Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="77.667,20,0,0" Grid.Row="4" VerticalAlignment="Top" Width="75"/>
                </Grid>
            </TabItem>
            <TabItem Header="パッケージビュー" Padding="20">
                <StackPanel>
                    <TextBox Text="{Binding PackagePath.Value}" />
                    <Button Command="{Binding LoadPackageCommand}" Content="Load" />
                </StackPanel>
            </TabItem>
            <TabItem Header="nuspec" Padding="20">
                <xctk:PropertyGrid AutoGenerateProperties="False" SelectedObject="{Binding Package.Value}" >

                    <xctk:PropertyGrid.EditorDefinitions>
                        <xctk:EditorTemplateDefinition TargetProperties="Authors,Owners">
                            <xctk:EditorTemplateDefinition.EditingTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding Value}"/>
                                </DataTemplate>
                            </xctk:EditorTemplateDefinition.EditingTemplate>
                        </xctk:EditorTemplateDefinition>
                    </xctk:PropertyGrid.EditorDefinitions>
                    <xctk:PropertyGrid.PropertyDefinitions>
                        <xctk:PropertyDefinition TargetProperties="Id" Description="パッケージのID。小文字で区切りは「-」を使う。「.」は.portableなどのサフィックスののみに使用する" />
                        <xctk:PropertyDefinition TargetProperties="Version" Description="てすてす http://live2.nicovideo.jp/watch/lv295700989?ref=sharetw" />
                        <xctk:PropertyDefinition TargetProperties="Owners" />
                        <xctk:PropertyDefinition TargetProperties="PackageSourceUrl" />
                        <xctk:PropertyDefinition TargetProperties="Title" />
                        <xctk:PropertyDefinition TargetProperties="Authors" />
                        <xctk:PropertyDefinition TargetProperties="Hoge" />
                        <xctk:PropertyDefinition TargetProperties="ProjectUrl" />
                        <xctk:PropertyDefinition TargetProperties="IconUrl" />
                        <xctk:PropertyDefinition TargetProperties="Copyright" />
                        <xctk:PropertyDefinition TargetProperties="LicenseUrl" />
                        <xctk:PropertyDefinition TargetProperties="ProjectSourceUrl" />
                        <xctk:PropertyDefinition TargetProperties="DocsUrl" />
                        <xctk:PropertyDefinition TargetProperties="MailingListUrl" />
                        <xctk:PropertyDefinition TargetProperties="BugTrackerUrl" />
                        <xctk:PropertyDefinition TargetProperties="Tags" />
                        <xctk:PropertyDefinition TargetProperties="Summary" />
                        <xctk:PropertyDefinition TargetProperties="Description" />
                        <xctk:PropertyDefinition TargetProperties="ReleaseNotes" />
                    </xctk:PropertyGrid.PropertyDefinitions>
                </xctk:PropertyGrid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
